{
  "name": "ecslate",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "electron .",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.suprdev.ecslate",
    "productName": "Ecslate",
    "copyright": "Copyright @ 2021 by Sunny Prakash",
    "win": {
      "target": "nsis",
      "icon": "public/react_new.ico"
    },
    "nsis": {
      "installerIcon": "public/react_new.ico",
      "uninstallerIcon": "public/react_new.ico",
      "uninstallDisplayName": "Ecslate",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "electron-reload": "^1.5.0",
    "sirv-cli": "^1.0.0"
  }
}
